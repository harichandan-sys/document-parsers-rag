# OpenAI API Key - Required for embeddings and LLM in RAG examples
OPENAI_API_KEY=your-openai-api-key-here

# LlamaParse (get from https://cloud.llamaindex.ai/)
LLAMA_CLOUD_API_KEY=llx-your-api-key-here

# Vectorize.io (get from https://platform.vectorize.io/)
VECTORIZE_ORGANIZATION_ID=your-vectorize-org-id-here
VECTORIZE_API_KEY=your-vectorize-api-key-here

# Optional: Pinecone for Vectorize pipeline integration
# PINECONE_API_KEY=your-pinecone-api-key-here

# Optional: HuggingFace Token for downloading models
HF_TOKEN=your-huggingface-token-here

# Optional: Set custom cache directory for models
# HF_HOME=/path/to/cache

# Optional: Increase timeout for model downloads
# HF_HUB_DOWNLOAD_TIMEOUT=300
